    "experimentalDecorators": true,
    "target": "esnext",
    "module": "commonjs",
    "noImplicitAny": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
